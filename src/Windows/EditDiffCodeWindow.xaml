<Window x:Class="DiffClient.Windows.EditDiffCodeWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DiffClient.Windows"
        mc:Ignorable="d"
        Title="EditDiffCodeWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <RichTextBox Grid.Row="1" x:Name="richtextbox"/>
        <StackPanel Orientation="Horizontal" Grid.Row="2">
            <StatusBar Name="statusbar"/>
            <Button Content="Store" Click="Store_Click" />
        </StackPanel>
    </Grid>
</Window>
